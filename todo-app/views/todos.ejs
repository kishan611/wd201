<div style="display: grid; justify-content: center; align-items: center">
    <div>
        <% let OD=allTodos.filter((item) => item.dueDate < new Date().toISOString().slice(0, 10) && item.completed===false); %>
        <div class="flex">
            <h5 class="font-bold text-base px-2">Overdue</h5>
            <button id="count-overdue" class="bg-gray-400 text-black px-3 py-0.5 rounded font-medium mr-2 mb-2"><%=OD.length %></button>
        </div>
        <ul class="list-none">
            <% for(let i=0;i<OD.length;i++){ %>
            <li class="Todo-Item">
                <div class="flex item-center w-fit my-2 px-2 py-1 rounded hover:bg-purple-50">
                    <input type="checkbox" id="overdue-checkbox-<%= i %>" class="w-4 h-4 text-blue-600 rounded border">
                    <label for="overdue-checkbox-<%= i %>" class="ml-2 text-sm text-gray-600 cursor-pointer"><%= OD[i].title %></label>
                    <a href="#" class="hidden trash-icon ml-2">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                        </svg>
                    </a>
                </div>  
            </li>
            <% } %>
        </ul>
    </div>
    <div >
        <% let DT=allTodos.filter((item) => item.dueDate == new Date().toISOString().slice(0, 10) && item.completed===false); %>
        <div class="flex">
            <h5 class="font-bold text-base px-2">Due Today</h5>
            <button id="count-due-today" class="bg-gray-400 text-black px-3 py-0.5 rounded font-medium mr-2 mb-2"><%=DT.length %></button>
        </div>
        <ul class="list-none">
            <% for(let i=0;i<DT.length;i++){ %>
            <li class="Todo-Item">
                <div class="flex item-center w-fit my-2 px-2 py-1 rounded hover:bg-purple-50">
                    <input type="checkbox" id="duetoday-checkbox-<%= i %>" class="w-4 h-4 text-blue-600 rounded border">
                    <label for="duetoday-checkbox-<%= i %>" class="ml-2 text-sm text-gray-600 cursor-pointer"><%= DT[i].title %></label>
                    <a href="#" class="hidden trash-icon ml-2">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                        </svg>
                    </a>
                </div>  
            </li>
            <% } %>
        </ul>
    </div>
    <div>
        <% let DL=allTodos.filter((item) => item.dueDate > new Date().toISOString().slice(0, 10) && item.completed===false); %>
        <div class="flex" >
            <h5 class="font-bold text-base px-2">Due Later</h5>
            <button id="count-due-later" class="bg-gray-400 text-black px-3 py-0.5 rounded font-medium mr-2 mb-2"><%=DL.length %></button>
        </div>
        <ul class="list-none">
            <% for(let i=0;i<DL.length;i++){ %>
            <li class="Todo-Item">
                <div class="flex item-center w-fit my-2 px-2 py-1 rounded hover:bg-purple-50">
                    <input type="checkbox" id="duelater-checkbox-<%= i %>" class="w-4 h-4 text-blue-600 rounded border">
                    <label for="duelater-checkbox-<%= i %>" class="ml-2 text-sm text-gray-600 cursor-pointer"><%= DL[i].title %></label>
                    <a href="#" class="hidden trash-icon ml-2">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                        </svg>
                    </a>
                </div>  
            </li>
            <% } %>
        </ul>
    </div>
    
</div>









